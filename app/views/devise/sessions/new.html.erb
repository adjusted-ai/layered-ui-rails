<div class="page--vertically-centered">
  <div class="page--width-constrained">
    <h1>Welcome back</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
      <%= render 'layouts/layered_ui/notice' %>
      <%= render 'layered_ui/shared/form_errors', item: resource %>

      <div class="form-group">
        <%= render 'layered_ui/shared/label', form: f, field: :email, required: true %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
        <%= render 'layered_ui/shared/field_error', object: resource, field: :email %>
      </div>

      <div class="form-group">
        <%= render 'layered_ui/shared/label', form: f, field: :password, required: true %>
        <%= f.password_field :password, autocomplete: "current-password", class: "field" %>
        <%= render 'layered_ui/shared/field_error', object: resource, field: :password %>

      <% if devise_mapping.rememberable? %>
        <div class="form-group container--checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "label--checkbox" %>
        </div>
      <% end %>

      <div class="form-group--large">
        <%= f.submit "Continue", class: "btn-primary--full" %>
      </div>
    <% end %>

    <div class="form-group">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
