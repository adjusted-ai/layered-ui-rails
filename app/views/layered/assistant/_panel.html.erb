<% if user_signed_in? && current_conversation %>
  <div data-controller="layered-assistant">
    <aside class="container--assistant" data-layered-assistant-target="container">
      <div class="assistant-resize-handle"
           data-layered-assistant-target="resizeHandle"
           data-action="mousedown->layered-assistant#startResize dblclick->layered-assistant#resetWidth"></div>

      <div class="assistant-panel">
        <div class="assistant-header">
          <div class="assistant-header-content">
            <%= render partial: "layered/assistant/header_buttons", locals: { conversation: current_conversation } %>
          </div>
        </div>

        <div class="assistant-messages"
             data-layered-assistant-target="messages"
             id="<%= dom_id(current_conversation) %>_messages">
          <%= turbo_stream_from current_conversation %>

          <% if current_conversation.messages.any? %>
            <% current_conversation.messages.by_created_at.each do |message| %>
              <%= render partial: "layered/assistant/messages/message", locals: { message: message } %>
            <% end %>
          <% end %>
        </div>

        <div class="assistant-input">
          <%= turbo_frame_tag "#{dom_id(current_conversation)}_message_form" do %>
            <%= render partial: "layered/assistant/messages/form", locals: { conversation: current_conversation } %>
          <% end %>
        </div>
      </div>
    </aside>

    <button type="button"
            class="assistant-fab"
            data-action="click->layered-assistant#toggle"
            data-layered-assistant-target="fabButton">
      <svg class="assistant-fab-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
      </svg>
    </button>
  </div>
<% end %>
